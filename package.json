{
    "name": "react-native-orientation-manager",
    "version": "1.1.0",
    "description": "A React Native module to retrieve interface/device orientation, listen to orientation changes, and lock screen to a specific orientation.",
    "main": "lib/commonjs/index",
    "module": "lib/module/index",
    "types": "lib/typescript/src/index.d.ts",
    "react-native": "src/index",
    "source": "src/index",
    "files": [
        "src",
        "lib",
        "android",
        "ios",
        "windows",
        "cpp",
        "*.podspec",
        "!ios/build",
        "!android/build",
        "!android/gradle",
        "!android/gradlew",
        "!android/gradlew.bat",
        "!android/local.properties",
        "!**/__tests__",
        "!**/__fixtures__",
        "!**/__mocks__",
        "!**/.*"
    ],
    "scripts": {
        "example": "yarn workspace react-native-orientation-manager-example",
        "test": "jest",
        "typecheck": "tsc --noEmit",
        "lint": "eslint \"**/*.{js,ts,tsx}\"",
        "prepare": "bob build",
        "release": "release-it"
    },
    "keywords": [
        "react-native",
        "ios",
        "android",
        "windows",
        "orientation"
    ],
    "repository": "https://github.com/KroosX4V/react-native-orientation-manager",
    "author": "KroosX4V <hasxt23@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/KroosX4V/react-native-orientation-manager/issues"
    },
    "homepage": "https://github.com/KroosX4V/react-native-orientation-manager#readme",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^17.0.2",
        "@react-native/eslint-config": "^0.72.2",
        "@release-it/conventional-changelog": "^5.0.0",
        "@types/jest": "^28.1.2",
        "@types/react": "18.2.25",
        "@types/react-native": "0.72.3",
        "commitlint": "^17.0.2",
        "eslint": "^8.4.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^28.1.1",
        "prettier": "^2.0.5",
        "react": "18.2.0",
        "react-native": "0.72.5",
        "react-native-builder-bob": "^0.20.0",
        "react-native-windows": "0.72.10",
        "release-it": "^15.0.0",
        "typescript": "^5.0.2"
    },
    "peerDependencies": {
        "@react-navigation/native": ">= 5.0.0",
        "react": "*",
        "react-native": "*"
    },
    "peerDependenciesMeta": {
        "@react-navigation/native": {
            "optional": true
        }
    },
    "resolutions": {
        "@react-navigation/stack@6.3.17": "patch:@react-navigation/stack@npm%3A6.3.17#./.yarn/patches/@react-navigation-stack-npm-6.3.17-4ef7cbe143.patch",
        "react-native-screens@3.24.0": "patch:react-native-screens@npm%3A3.24.0#./.yarn/patches/react-native-screens-npm-3.24.0-0887b5e74d.patch"
    },
    "workspaces": [
        "example"
    ],
    "packageManager": "yarn@3.6.1",
    "engines": {
        "node": ">= 16.0.0"
    },
    "jest": {
        "preset": "react-native",
        "modulePathIgnorePatterns": [
            "<rootDir>/example/node_modules",
            "<rootDir>/lib/"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release ${version}",
            "tagName": "v${version}"
        },
        "npm": {
            "publish": true
        },
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular"
            }
        }
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "@react-native",
            "prettier"
        ],
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "quoteProps": "consistent",
                    "singleQuote": false,
                    "tabWidth": 4,
                    "trailingComma": "es5",
                    "useTabs": false
                }
            ]
        }
    },
    "eslintIgnore": [
        "node_modules/",
        "lib/"
    ],
    "prettier": {
        "quoteProps": "consistent",
        "singleQuote": false,
        "tabWidth": 4,
        "trailingComma": "es5",
        "useTabs": false
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            "commonjs",
            "module",
            [
                "typescript",
                {
                    "project": "tsconfig.build.json"
                }
            ]
        ]
    }
}
